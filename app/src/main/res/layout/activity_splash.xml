<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" style="@style/MyCustomStyle" >

    <ImageView
        android:id="@+id/splashScreenTitleImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/app_title_image_3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:padding="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_food_type"
        android:id="@+id/splashScreenButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="146dp"
        android:padding="5dp" />

</RelativeLayout>